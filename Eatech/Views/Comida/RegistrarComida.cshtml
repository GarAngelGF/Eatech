    <script src="https://www.google.com/recaptcha/api.js"></script>
</head>

<body>

    <div id="container2" class="content-container">


        <br>
        <br>
        <br>





        <div class="col-sm-12 col-md-12 col-lg-12 contenedor-alimentos-agg2">

            <h3>Agregar un nuevo alimento</h3>
            <form asp-action="RegistrarComida" method="post" class="form">
                <div asp-validation-summary="ModelOnly"> </div>


                <!-- --------------------------------------------------------------------------- -->
                <input asp-for="Nombre" placeholder="Nombre del alimento" id="Nombre" type="text" class="input" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>

                <!-- --------------------------------------------------------------------------- -->
                <!-- --------------------------------------------------------------------------- -->
                <input asp-for="Porciones" placeholder="Porciones disponibles" id="Porciones" type="number" class="input" required min="1" max="20" />
                <span asp-validation-for="Porciones" class="text-danger"></span>

                <!-- --------------------------------------------------------------------------- -->




                <div class="row">


                    <div class="col-sm-12 col-md-12 col-lg-12">

                        <br>

                        <button class="buttonZ" type="submit">
                            Agregar
                            <div class="hoverEffect">
                                <div></div>
                            </div>
                        </button>
                    </div>
                </div>


            </form>

        </div>



    </div>

    <script src="/js/CONTENEDORES-p.js"></script>



</body>

</html>